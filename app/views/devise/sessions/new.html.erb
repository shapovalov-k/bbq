<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="container col-xs-10 bg-info">

    <div class="container col-xs">
      <div class="row">
        <h3 class="col-10">Войти</h3>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-10">
        <%= render partial: 'partials/form_errors', locals: {model: resource} %>
      </div>
    </div>

    <form>
      <div class="form-group col-xs">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, class:"form-control", autocomplete: "name"%>
      </div>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class:"form-control", autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, class:"form-control", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="form-group">
        <%= f.submit "Войти", class: "btn btn-success" %>
      </div>
    </form>

    <div class="container">
      <div class="row">
        <div class="form-group">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>

  </div>

<% end %>