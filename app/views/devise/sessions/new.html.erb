<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="container">
    <div class="row">
      <div class="col-12 col-xs-12 col-sm-6 col-md-5">
        <div class="row well">

          <h3 class="text-center">Войти</h3>

          <form>
            <div class="row">
              <div class="form-group col-xs">
                <%= render partial: 'partials/form_errors', locals: {model: resource} %>
              </div>
            </div>

            <div class="form-group col-xs">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, class:"form-control", autocomplete: "email" %>
            </div>

            <div class="form-group col-xs">
              <%= f.label :password %><br />
              <%= f.password_field :password, class:"form-control", autocomplete: "current-password" %>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="form-group col-xs">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end -%>

            <div class="form-group col-xs">
              <%= f.submit "Войти", class: "btn btn-success" %>
            </div>
          </form>

          <div class="container">
            <div class="row">
              <div class="form-group col-xs">
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>

<% end %>