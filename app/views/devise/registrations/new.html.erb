<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="container">
    <div class="row">
      <div class="col-12 col-xs-10 col-sm-6 col-md-5">
        <div class="row well">

          <h3 class="text-center">Регистрация нового пользователя</h3>

          <form>
            <div class="form-group col-xs">
              <%= render partial: 'partials/form_errors', locals: {model: resource} %>
            </div>

            <div class="form-group col-xs">
              <%= f.label :name %><br />
              <%= f.text_field :name, autofocus: true, class:"form-control", autocomplete: "name"%>
            </div>

            <div class="form-group col-xs">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, class:"form-control", autocomplete: "email" %>
            </div>

            <div class="form-group col-xs">
              <div class="d-inline">
                <%= f.label :password %>
                (6 знаков минимум)
              </div>
              <%= f.password_field :password, class:"form-control", autocomplete: "new-password" %>
            </div>

            <div class="form-group col-xs">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "new-password" %>
            </div>

            <div class="form-group col-xs">
              <%= f.submit "Зарегистрироваться", class: "btn btn-success" %>
            </div>

            <div class="container">
              <div class="row">
                <div class="form-group">
                  <%= link_to 'Войти', new_user_session_url %>
                </div>
              </div>
            </div>

          </form>

        </div>
      </div>
    </div>
  </div>

<% end %>